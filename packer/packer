#!/bin/bash
DOCKER_CMD=$(basename $0)
if [ ! -f packer_vesion ];then
   echo "Cannot find ansible version file" 
   exit 1
fi
. packer_vesion

docker run -it --rm \
        -w /app \
        -v $(pwd):/app \
        -v "${HOME}/.aws:/root/.aws" \
        -v "${HOME}/.ssh:/root/.ssh" \
        -v "${HOME}/vaultpass:/root/vaultpass" \
        -v "${SSH_AUTH_SOCK}:/ssh-agent" \
        -e "SSH_AUTH_SOCK=/ssh-agent" \
        --log-driver none \
  packer:${PACKER_VERSION} $DOCKER_CMD $@ 
